<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with type="com.codenvy.plugin.contribution.client.ContributeMessages" field="messages" />
    <ui:style>
        @eval bgTopPanel com.codenvy.ide.api.theme.Style.getConsolePanelColor();

        .topPanel {
            height: 38px;
            border-top: 1px solid #232323;
            border-bottom: 1px solid #232323;
            z-index: 4;
            background-color: bgTopPanel;
            font-size: 12px;
        }

        .rootPanel {
            position: relative;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }
        .buttonSection {
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
            flex-grow: 0;
            flex-shrink: 0;
        }
        .fieldsSection {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            flex-shrink: 1;
        }
        .fieldItem {
            display: flex;
            flex-direction: row;
        }
    </ui:style>
    <g:HTMLPanel width="774px" height="400px" addStyleNames="{style.rootPanel}">
        <div class="{style.fieldsSection}">
            <div class="{style.fieldItem}">
                <div>Branch Name</div><g:TextBox ui:field="branchName"/>
            </div>
            <div class="{style.fieldItem}">
                <div>Pull Request Comment</div><g:TextArea ui:field="pullRequestComment" visibleLines="3" />
            </div>
        </div>
        <div class="{style.buttonSection}">
            <g:Button ui:field="cancelButton" ui:text="{messages.cancelButton}" />
            <g:Button ui:field="contributeButton" ui:text="{messages.contributeButton}" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder>