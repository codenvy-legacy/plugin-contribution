<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.codenvy.plugin.contribution.client.dialogs.paste'>

    <ui:with type="com.codenvy.plugin.contribution.client.ContributeMessages" field="messages"/>
    <ui:with type="com.codenvy.plugin.contribution.client.ContributeResources" field="resources"/>
    <ui:style>
        .rootPanel {
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .rootPanel .section {
            border-bottom: 1px solid #232323;
        }

        .section:last-child {
            border-bottom: none;
        }

        .section {
            display: flex;
            flex-direction: column;
            padding: 1em 2em 1em 2em;
        }

        .sectionTitle {
            margin-bottom: 1em;
            color: #808080;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
            position: relative;
            left: -1em;
            top: 0;
        }

        .fieldItem {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            margin-bottom: 1em;
        }

        .field {
            flex-grow: 1;
        }

        .fieldLabel {
            width: 11em;
            flex-grow: 0;
            display: flex;
            margin-bottom: 0.5em;
        }

        .fixed-textarea {
            overflow: scroll;
            resize: none;
        }

        .contributeButton {
            align-self: flex-end;
            width: 120px;
            background: #256c9f;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.29), inset 0 1px 0 0 rgba(55, 126, 172, 1);
            border-color: #2f3237;
        }

        .contributeButton:hover {
            background: #18537e;
        }

        .contributeButton[disabled], .contributeButton[disabled]:hover {
            background: rgba(37, 108, 159, 0.35);
            color: rgba(255, 255, 255, 0.35);
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.rootPanel}">
        <div class="{style.section}">
            <g:Label addStyleNames="{style.sectionTitle}" text="{messages.contributePartConfigureContributionSectionTitle}"/>
            <div class="{style.fieldItem}">
                <g:Label addStyleNames="{style.fieldLabel}" text="{messages.contributePartBranchNameInputLabelText}"/>
                <my:PasteAwareTextBox ui:field="branchName" addStyleNames="{style.field} {resources.contributeCss.inputField}"/>
            </div>
            <div class="{style.fieldItem}">
                <g:Label addStyleNames="{style.fieldLabel}" text="{messages.contributePartContributionTitleLabelText}"/>
                <my:PasteAwareTextBox ui:field="contributionTitle" addStyleNames="{style.field} {resources.contributeCss.inputField}"/>
            </div>
            <div class="{style.fieldItem}">
                <g:Label addStyleNames="{style.fieldLabel}" text="{messages.contributePartContributionCommentLabelText}"/>
                <g:TextArea height="80px" ui:field="contributionComment"
                            addStyleNames="{style.field} {resources.contributeCss.inputField} {style.fixed-textarea}"/>
            </div>
            <g:Button addStyleNames="{style.contributeButton}" ui:field="contributeButton"
                      text="{messages.contributePartContributeButton}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>