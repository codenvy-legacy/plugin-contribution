<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:my='urn:import:com.codenvy.plugin.contribution.client.dialogs.paste'>

    <ui:with type="com.codenvy.plugin.contribution.client.ContributeMessages" field="messages"/>
    <ui:style>
        .rootPanel {
            position: relative;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .fieldsSection {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            flex-shrink: 1;
            padding-top: 2em;
            padding-right: 5em;
            padding-left: 5em;
        }

        .fieldItem {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            margin-bottom: 0.7em;
        }

        .label {
            width: 11em;
            flex-grow: 0;
            display: flex;
            margin-right: 1em;
        }

        .field {
            flex-grow: 1;
        }

        .fixed-textarea {
            overflow: scroll;
            resize: none;
        }
    </ui:style>
    <g:HTMLPanel width="774px" height="250px" addStyleNames="{style.rootPanel}">
        <div class="{style.fieldsSection}">
            <div class="{style.fieldItem}">
                <g:Label addStyleNames="{style.label}" text="{messages.preContributeWizardBranchNameInputLabelText}"/>
                <my:PasteAwareTextBox ui:field="branchName" addStyleNames="{style.field}"/>
            </div>
            <div class="{style.fieldItem}">
                <g:Label addStyleNames="{style.label}" text="{messages.preContributeWizardContributionTitleLabelText}"/>
                <my:PasteAwareTextBox ui:field="contributionTitle" addStyleNames="{style.field}"/>
            </div>
            <div class="{style.fieldItem}">
                <g:Label addStyleNames="{style.label}" text="{messages.preContributeWizardContributionCommentLabelText}"/>
                <g:TextArea ui:field="contributionComment" visibleLines="5" addStyleNames="{style.field} {style.fixed-textarea}"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>